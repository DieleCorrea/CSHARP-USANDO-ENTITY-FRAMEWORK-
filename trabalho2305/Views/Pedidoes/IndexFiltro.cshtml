@model IEnumerable<trabalho2305.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Pedidoes" asp-action="IndexFiltro">

    <p>
        Cidade:
        <select asp-items="@ViewBag.pnomeCidade" name="p_nome"><option></option></select>
        Clientes:
        <select asp-items="@ViewBag.nomeCli" name="p_nomecliente"><option></option></select>
        Forma de pagamento:
        <select asp-items="@ViewBag.formapag" name="p_formapagar"><option></option></select>
        

        Observação: <input type="text" name="criteriobusca" />
        <input type="submit" value="filtrar" />
    </p>
</form>












<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFormaPgto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdFormaPgto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPedido">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPedido">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPedido">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
